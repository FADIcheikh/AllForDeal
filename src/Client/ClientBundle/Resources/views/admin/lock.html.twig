{% extends "ClientBundle:admin:index.html.twig" %}
{% block title %}Lock{%endblock%}
    {% block href %}{{path('admin_userspage')}}{% endblock %}
{% block n_href %}Users{% endblock %}
{% block actuel %} Lock/Disable User {% endblock %}

{% block contenu %}
    {% block popup %}
        
 <div class="container">
     
     <form method="POST" action="{{path('admin_users_lock_page',{'id':client.id})}}">
<div class="switch switch-yellow">
    
      <input type="radio" class="switch-input" name="lock" value="0" id="week3" checked>
      <label for="week3" class="switch-label switch-label-off">Unlock</label>
      <input type="radio" class="switch-input" name="lock" value="1" id="month3">
      <label for="month3" class="switch-label switch-label-on">Lock</label>
      <span class="switch-selection"></span>    

     
    </div>
      
     
    <div class="switch">
        
      <input type="radio" class="switch-input" name="disable" value="1" id="week" checked>
      <label for="week" class="switch-label switch-label-off">Enable</label>
      <input type="radio" class="switch-input" name="disable" value="0" id="month">
      <label for="month" class="switch-label switch-label-on">Disable</label>
      <span class="switch-selection"></span>
      <br><br>
      <center>  <input type="submit" class="btn-info"></center>

    </div>
</form>
    
 </div>
        
     

{% endblock %}
        {% endblock%}
               